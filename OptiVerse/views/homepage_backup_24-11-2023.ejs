        <div class="feed"><!-- This is only for the date to get extracted -->
            <% function formatDate(date) { %>
                <% var hours = date.getHours(); %>
                <% var minutes = date.getMinutes(); %>
                <% var day = date.getDate(); %>
                <% var month = date.getMonth() + 1; // JavaScript months are 0-based %>
                <% var year = date.getFullYear(); %>
            
                <% // pad with a zero if necessary %>
                <% hours = hours < 10 ? '0' + hours : hours; %>
                <% minutes = minutes < 10 ? '0' + minutes : minutes; %>
                <% day = day < 10 ? '0' + day : day; %>
                <% month = month < 10 ? '0' + month : month; %>
            
                <% return hours + ':' + minutes + ', ' + day + '/' + month + '/' + year; %>
            <% } %>
            <% posts.forEach(function(post) { %>
                <div class="feed-container">
                    <div class="feed-box">
                        <p class="user-info">
                            <%= formatDate(new Date(post.date)) %>
                        </p>
                        <p class="post-info">
                            <%= post.post %>
                        </p>
                        <div class="feed-interactions">
                            <a class="feed-btn"><i class="fa-regular fa-heart fa-2x"></i></a>
                            <a class="feed-btn"><i class="fa-solid fa-share fa-2x"></i></a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/0f84f242f1.js" crossorigin="anonymous"></script>
    <script type="text/javascript" src="scripts.js"></script>
    
    <script>//tags
        function myFunction() {
            document.getElementById("myDropdown").classList.toggle("show");
        }

        window.onclick = function(event) {
            if (!event.target.matches('.dropbtn')) {
                var dropdowns = document.getElementsByClassName("dropdown-content");
                for (var i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.classList.contains('show')) {
                        openDropdown.classList.remove('show');
                    }
                }
            }
        }
    </script>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');

