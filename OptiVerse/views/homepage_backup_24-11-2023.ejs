            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 110vh;
            background: rgba(39, 39, 39, 0.4);
            z-index: 2;
        }


        #create-post {
            margin-top: 200px;
            padding: 25px;
            background-color: #fbf3e4;
        }

        .feed-container .feed-box textarea {
            min-width: 100%;
            max-width: 100%;
            min-height: 0px;
            max-height: 500px;
            padding: 10px;
            outline: none;
            border: none;
            resize: none;
            cursor: auto;
            font-size: 1.5em;
            overflow-x: hidden;
            overflow-y: auto;
            background-color: rgba(255, 255, 255, 0);
        }

