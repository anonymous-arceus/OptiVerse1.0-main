            border-radius: 5px;
            margin: 5px 30px;
            padding: 5px 10px;
            font-weight: 300;
            background: rgba(255, 255, 255, 0.7);
            text-align: center;
            text-decoration: none;
            font-size: 20px;
            cursor: pointer;
            transition: .3s ease;
        }

        .feed-interactions .post-btn :hover {
            background: rgba(255, 255, 255, 0.3);
        }


        /* feed general */
        .feed-container {
            margin: 20px;
            width: 750px;
            padding: 20px;
            border-radius: 20px;
            background-color: #fbf3e4;
        }

        .feed-container .feed-box p {
            padding: 15px;
        }

        .feed-interactions {
            display: flex;
            justify-content: right;
            padding: 20px 0;
        }

        .feed-btn {
            padding: 0 20px;
        }

        /* media section */
        @media only screen and (max-width: 786px) {
            .nav-button {
                display: none;
            }

            .nav-menu.responsive {
                top: 100px;
            }

            .nav-menu {
                position: absolute;
                top: -800px;
                display: flex;
                justify-content: center;
                background: rgba(255, 255, 255, 0.2);
                width: 100%;
                height: 90vh;
                backdrop-filter: blur(20px);
                transition: .3s;
            }

            .nav-menu ul {
                flex-direction: column;
                text-align: center;
            }

            .nav-menu-btn {
                display: block;
            }

            .nav-menu-btn i {
                font-size: 25px;
                color: #fff;
                padding: 10px;
                background: rgba(255, 255, 255, 0.2);
                border-radius: 50%;
                cursor: pointer;
                transition: .3s;
            }

            .nav-menu-btn i:hover {
                background: rgba(255, 255, 255, 0.15);
            }
        }

        @media only screen and (max-width: 540px) {
            .wrapper {
                min-height: 100vh;
            }

            .form-box {
                width: 100%;
                height: 500px;
            }

            .register-container,
            .login-container {
                width: 100%;
                padding: 0 20px;
            }

            .register-container .two-forms {
                flex-direction: column;
                gap: 0;
            }
        }

        /* tags */
        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            min-width: 160px;
            z-index: 1;
            background-color: #f9f9f9; /* Change this to your desired background color */
            overflow: auto;
            max-height: 200px; /* Change this to your desired maximum height */
        }

        .dropdown-content a {
            color: black; /* Change this to your desired text color */
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .show {
            display: block;
        }
    </style>
